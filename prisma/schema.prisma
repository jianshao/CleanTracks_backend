datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "go run github.com/steebchen/prisma-client-go"
}

enum SUB_STATUS {
  INIT
  PAID
  EXPIRED
  PAUSED
  CANCELLED
}

model user {
  id    Int     @id @default(autoincrement())
  avatar String @default("")
  email String @unique
  password String
  register_time DateTime @default(dbgenerated("now()"))
}

model subscriptions {
  id    Int     @id @default(autoincrement())
  uid Int
  store_id Int
  product_id Int
  variant_id Int
  subscription_id Int @unique
  status SUB_STATUS @default(INIT)
  created_time DateTime @default(dbgenerated("now()"))
  updated_time DateTime @updatedAt
}